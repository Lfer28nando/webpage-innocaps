 ---                       
 import '../styles/global.css'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Innocaps Lab - Nanotecnología" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-slate-900 text-white antialiased">
		<slot />
	</body>
</html>

<style is:global>
	/* Aquí puedes poner fuentes globales si usas @font-face */
</style>